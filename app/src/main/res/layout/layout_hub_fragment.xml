<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/schedule_button"
        android:text="@string/schedule"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/ic_schedule"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/social_button" />

    <Button
        android:id="@+id/social_button"
        android:text="@string/social"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/ic_social"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/schedule_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/meetings_button"
        android:text="@string/meetings"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/ic_meetings"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/schedule_button"
        app:layout_constraintEnd_toStartOf="@id/messages_button"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/messages_button"
        android:text="@string/messages"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/ic_messages"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/social_button"
        app:layout_constraintStart_toEndOf="@id/meetings_button"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>