<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    android:background="@drawable/top_side_rounded_app_back">


    <LinearLayout
        android:id="@+id/pause_video_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/material_motion_duration_short_1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/schedule_call_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_back"
            android:gravity="center"
            android:textColor="@color/app_white"
            android:textColorHint="@color/app_white"
            android:text="@string/scheduled_calls_heading" />

        <Button
            android:id="@+id/group_calendar_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_back"
            android:gravity="center"
            android:textColor="@color/app_white"
            android:text="@string/group_calendar_button" />

        <Button
            android:id="@+id/view_recordings_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_back"
            android:gravity="center"
            android:textColor="@color/app_white"
            android:text="@string/view_recording_button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>