<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_back">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/videoPlayerRecycleView"
        android:layout_width="0dp"
        android:layout_height="856dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="1dp" />

    <Button
        android:id="@+id/end_call_button"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="34dp"
        android:text="@string/end_call_button"
        app:layout_constraintEnd_toStartOf="@+id/people_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mute_button"
        app:layout_constraintTop_toBottomOf="@+id/videoPlayerRecycleView" />

    <Button
        android:id="@+id/video_button"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="35dp"
        android:text="@string/video_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoPlayerRecycleView" />

    <Button
        android:id="@+id/messages_button"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="36dp"
        android:text="@string/messages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoPlayerRecycleView" />

    <Button
        android:id="@+id/people_button"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="36dp"
        android:text="@string/people_button"
        app:layout_constraintEnd_toStartOf="@+id/messages_button"
        app:layout_constraintTop_toBottomOf="@+id/videoPlayerRecycleView" />

    <Button
        android:id="@+id/mute_button"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="36dp"
        android:text="@string/mute_button"
        app:layout_constraintStart_toEndOf="@+id/video_button"
        app:layout_constraintTop_toBottomOf="@+id/videoPlayerRecycleView" />

</androidx.constraintlayout.widget.ConstraintLayout>