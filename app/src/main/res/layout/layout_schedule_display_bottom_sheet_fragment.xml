<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <TextView
        android:id="@+id/schedule_display_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/schedule_display_class"
        android:textStyle="bold"
        style="@style/TitleTextviewBoldStyle"
        />

    <LinearLayout
        android:id="@+id/schedule_display_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:paddingTop="5dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/schedule_display_title"
        app:layout_constraintLeft_toRightOf="@id/schedule_display_title"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/schedule_display_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"/>

        <ImageButton
            android:id="@+id/schedule_display_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_email"/>

        <ImageButton
            android:id="@+id/schedule_display_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"/>

        <ImageButton
            android:id="@+id/schedule_display_ellipsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ellipsis"/>



    </LinearLayout>

    <TextView
        android:id="@+id/schedule_display_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BottomSheetSmallTextViewStyle"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/schedule_display_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/schedule_display_date"/>

    <TextView
        android:id="@+id/schedule_display_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BottomSheetSmallTextViewStyle"
        android:textStyle="bold"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/schedule_display_title"
        app:layout_constraintLeft_toRightOf="@id/schedule_display_date"
        android:text="@string/schedule_display_time"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/schedule_display_occurrence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BottomSheetSmallTextViewStyle"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/schedule_display_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/schedule_display_occurrence"/>

    <TextView
        android:id="@+id/schedule_display_eta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BottomSheetSmallTextViewStyle"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/schedule_display_occurrence"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/schedule_display_eta"
        app:drawableStartCompat="@drawable/ic_notification" />

    <TextView
        android:id="@+id/schedule_display_organizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BottomSheetSmallTextViewStyle"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/schedule_display_eta"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/schedule_display_organizer"
        app:drawableStartCompat="@drawable/ic_person" />

</androidx.constraintlayout.widget.ConstraintLayout>