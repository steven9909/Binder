<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="VideoButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/rounded_corner_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleTextviewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@color/app_white</item>
    </style>

    <style name="TitleTextviewBoldStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@color/app_yellow</item>
    </style>

    <style name="BottomSheetTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/app_yellow</item>
    </style>

    <style name="BottomSheetTextViewStyleSmaller" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/app_yellow</item>
    </style>

    <style name="SubTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubTitleViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/sub_title</item>
    </style>

    <style name="BottomSheetSmallTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/app_white</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="background">@color/app_white</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/app_back</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheetStyle</item>
    </style>

    <style name="RoundedBottomSheetStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

</resources>